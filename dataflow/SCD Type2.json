{
	"name": "SCD Type2",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"name": "mysqlbigdata"
				},
				{
					"dataset": {
						"referenceName": "bronze_delta",
						"type": "DatasetReference"
					},
					"name": "sourcebronze"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "leftjoin"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false) ~> mysqlbigdata",
				"source(output(",
				"          emp_id as integer,",
				"          salary as integer,",
				"          dept_name as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> sourcebronze",
				"mysqlbigdata, sourcebronze join(emp_id == emp_id,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> leftjoin"
			]
		}
	}
}